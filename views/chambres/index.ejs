<!-- views/chambres/index.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title><%= typeof title !== 'undefined' ? title : 'Gestion des Chambres' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Si tu utilises Bootstrap, garde ce link. Sinon, retire-le. -->
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <header class="d-flex align-items-center justify-content-between mb-3">
      <h1 class="h3 m-0"><%= typeof title !== 'undefined' ? title : 'Gestion des Chambres' %></h1>
      <a href="/chambres/create" class="btn btn-primary">
        + Créer une chambre
      </a>
    </header>

    <!-- Messages de retour (ex: erreurs de suppression) -->
    <% if (typeof messages !== 'undefined' && Array.isArray(messages) && messages.length) { %>
      <% messages.forEach(function(m){ %>
        <div class="alert alert-<%= m.type === 'error' ? 'danger' : (m.type || 'info') %>">
          <%= m.text %>
        </div>
      <% }) %>
    <% } %>

    <!-- Si liste vide -->
    <% if (!chambres || chambres.length === 0) { %>
      <div class="card shadow-sm">
        <div class="card-body">
          <p class="mb-0">Aucune chambre enregistrée pour le moment.</p>
        </div>
      </div>
    <% } else { %>
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 120px;">#</th>
                  <th>Capacité</th>

                  <!-- Colonnes optionnelles si présentes dans les données -->
                  <% const showType = chambres.some(c => typeof c.type !== 'undefined'); %>
                  <% const showPrix = chambres.some(c => typeof c.prix !== 'undefined'); %>
                  <% const showDispo = chambres.some(c => typeof c.disponible !== 'undefined'); %>

                  <% if (showType) { %><th>Type</th><% } %>
                  <% if (showPrix) { %><th>Prix</th><% } %>
                  <% if (showDispo) { %><th>Disponibilité</th><% } %>

                  <th class="text-end" style="width: 220px;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% chambres.forEach(function(chambre){ %>
                  <tr>
                    <td><strong><%= chambre.numero %></strong></td>
                    <td>
                      <% if (typeof chambre.capacite !== 'undefined') { %>
                        <%= chambre.capacite %> pers.
                      <% } else { %>
                        —
                      <% } %>
                    </td>

                    <% if (showType) { %>
                      <td><%= typeof chambre.type !== 'undefined' ? chambre.type : '—' %></td>
                    <% } %>

                    <% if (showPrix) { %>
                      <td>
                        <% if (typeof chambre.prix !== 'undefined') { %>
                          <%= Number(chambre.prix).toFixed(2) %> €
                        <% } else { %>—<% } %>
                      </td>
                    <% } %>

                    <% if (showDispo) { %>
                      <td>
                        <% if (typeof chambre.disponible !== 'undefined') { %>
                          <span class="badge <%= (chambre.disponible === true || chambre.disponible === 'true' || chambre.disponible === 1 || chambre.disponible === '1') ? 'bg-success' : 'bg-secondary' %>">
                            <%= (chambre.disponible === true || chambre.disponible === 'true' || chambre.disponible === 1 || chambre.disponible === '1') ? 'Disponible' : 'Indisponible' %>
                          </span>
                        <% } else { %>—<% } %>
                      </td>
                    <% } %>

                    <td class="text-end">
                      <div class="btn-group">
                        <a href="/chambres/<%= chambre.id %>/edit" class="btn btn-sm btn-outline-secondary">
                          Éditer
                        </a>
                        <!-- Confirmation via page dédiée comme prévu par /:id/delete -->
                        <a href="/chambres/<%= chambre.id %>/delete" class="btn btn-sm btn-outline-danger">
                          Supprimer
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Optionnel : JS Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
